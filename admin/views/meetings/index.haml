.block
  .secondary-navigation
    %ul.wat-cf
      %li.first.active=link_to pat(:list), url(:meetings, :index)
      %li=link_to pat(:new), url(:meetings, :new)
.content
  %h2.title
    =pat(:all)
    =mt(:meeting)
  .inner
    %table.table
      %tr
        %th.first=mat(:meeting, :id)
        %th=mat(:meeting, :topic)
        %th=mat(:meeting, :description)
        %th=mat(:meeting, :date)
        %th.last="&nbsp;"
      -@meetings.each do |meeting|
        %tr
          %td=meeting.id
          %td=meeting.topic
          %td=meeting.description
          %td=meeting.date 
          %td.last
            =button_to pat(:edit), url(:meetings, :edit, :id => meeting.id), :method => :get, :class => :button_to
            ="|"
            =button_to pat(:delete), url(:meetings, :destroy, :id => meeting.id), :method => :delete, :class => :button_to

